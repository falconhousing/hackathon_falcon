mixin functionality-item(header, sub_header, image_class)
	.functionality-item
		.functionality-item-image(class=image_class)
		.functionality-item-content
			.functionality-item-header #{header}
			.functionality-item-subheader #{sub_header}
mixin feature-item(header, image_class)
	.feature-item
		.feature-text #{header}
		.feature-icon(class=image_class)

mixin user-review(main_class, image_class, quote_text, user_name, user_profession)
	.user-review(class=main_class)
		.quote
			.quote-start
			.quote-text #{quote_text}
			.quote-end
		.user-details
			.user-image(class=image_class)
			.user-text
				.user-name #{user_name}
				.user-profession #{user_profession}

